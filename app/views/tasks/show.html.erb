<h1>id = <%= @task.id %>タスク詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
</table>

  <div class="container">
    <div class="row">
        <div class="col-xs-12"></div>
        <div class="col-md-8"></div>
        <div class="col-lg-6"></div>
    </div>
  </div>

<%= link_to 'このメッセージを編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>